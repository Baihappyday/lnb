<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    app:layout_constraintCircleRadius="3dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    tools:context=".user.OrderFragment0">

    <FrameLayout
        android:layout_width="150dp"
        android:id="@+id/typeimage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/typeimageview"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/get_from_db" />
    </FrameLayout>

    <TextView
        android:id="@+id/activitytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/typeimage"
        android:layout_toRightOf="@+id/typeimage"
        android:paddingTop="5dp"
        android:text="时间："
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activityaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activitytime"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/typeimage"
        android:layout_toRightOf="@+id/typeimage"
        android:text="地址："
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/activitydescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityaddress"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/typeimage"
        android:layout_toRightOf="@+id/typeimage"
        android:text="内容："
        android:textSize="20sp"
        android:textStyle="italic" />


</RelativeLayout>