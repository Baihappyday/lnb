<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/orange"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="30dp">
        <ImageView
            android:id="@+id/touxiang2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/touxiang"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="点击登录"
            android:textSize="17sp"
            android:background="@null"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="2dp"
        android:background="@color/white"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/pingfen"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="综合评分"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="2dp"
        android:background="@color/white"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/dingdan"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="综合评分"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_gravity="top|left"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/workbt1"
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:background="@null"
                android:text="进行中"
                android:textSize="17sp"
                android:gravity="center"/>
            <Button
                android:id="@+id/workbt2"
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:background="@null"
                android:text="待收款"
                android:textSize="17sp"
                android:gravity="center"/>
            <Button
                android:id="@+id/workbt3"
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:background="@null"
                android:text="已完成"
                android:textSize="17sp"
                android:gravity="center"/>
            <Button
                android:id="@+id/workbt4"
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:background="@null"
                android:text="待评价"
                android:textSize="17sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="2dp"
        android:background="@color/white"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/inwallet"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="收入钱包"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:background="@null"
            android:layout_gravity="center|left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shouye2"
            android:layout_width="220dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="任务列表" />

        <Button
            android:id="@+id/gerenzhongxin2"
            android:layout_width="220dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="个人中心" />
    </LinearLayout>
</LinearLayout>
